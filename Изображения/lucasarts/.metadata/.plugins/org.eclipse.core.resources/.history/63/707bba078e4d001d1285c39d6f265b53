package Classes;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Scanner;

import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.JTable;
import javax.swing.table.DefaultTableModel;
import javax.swing.table.TableModel;

public class CountryTable extends JTable {
	
	JTable table;
	
	public CountryTable(String countriesFileName) {
		
		Object[] tableData = new Object[3];
		DefaultTableModel tableModel = new DefaultTableModel();
		try {
			
			FileReader  reader = new FileReader(countriesFileName);
			

		
			String column = "";
			int ppl = 0;
			int data = 0;
			int n = 0;
			int j = 0;
			
			while (data != -1) {
							
							data = reader.read();
							
									if ((char) data != '\t' && (char) data != '\n' && (((char) data >= 'a' && (char) data <= 'z') 
											|| ((char) data >= 'A' && (char) data <= 'Z') 
											|| ((char) data >= '0' && (char) data <= '9') 
											|| ((char) data == ' '))) {
									
										column += (char) data;
										
									} else {
									
												if (n <= 2) {
													tableModel.addColumn(column);
													n += 1;
												}else if(j<=1 ) {
													
													tableData[j]=column;
													j+=1;
												}else if(j>=2) {
													
													tableData[j]=column;
													tableModel.addRow(tableData);
													j=0;
												}
												
										column = " ";
										
									}
									
								
									
						}
		

		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		this.table = new JTable(tableModel);
	
		
	}

	public JTable create()  {
		
		return table;
		
	}

}
